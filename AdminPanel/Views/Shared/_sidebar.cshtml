@{ var currentUserFullName = User.Claims.Where(c => c.Type == ClaimTypes.Name)
                     .Select(c => c.Value).SingleOrDefault(); }
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel" style="display:none;">
            <div class="pull-right image">
                @*<img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">*@
            </div>
            <div class="pull-left info">
                <p>@(currentUserFullName)</p>
                <a href="#"><i class="fa fa-circle text-success"></i> آنلاین</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="جستوجو ...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li>
                <a asp-controller="Device" asp-action="Index" class="waves-effect"><i class="fa fa-ravelry" aria-hidden="true"></i>دستگاه ها</a>
            </li>
            <li>
                <a asp-controller="Doctor" asp-action="Index" class="waves-effect"><i class="fa fa-stethoscope" aria-hidden="true"></i>دکتر ها</a>
            </li>
            <li>
                <a asp-controller="Patient" asp-action="Index" class="waves-effect"><i class="fa fa-heart" aria-hidden="true"></i>بیمار ها</a>
            </li>
            <li>
                <a asp-controller="SupportUser" asp-action="Index" class="waves-effect"><i class="fa fa-handshake-o" aria-hidden="true"></i>پشتیبان ها</a>
            </li>
            @*<li>
                <a asp-controller="SupportUserDevice" asp-action="Index" class="waves-effect"><i class="fa fa-leaf" aria-hidden="true"></i>دستگاه های پشتیبان</a>
            </li>*@
            <li>
                <a asp-controller="AdminUser" asp-action="Index" class="waves-effect"><i class="fa fa-user-plus" aria-hidden="true"></i>کاربران ادمین</a>
            </li>
            <li>
                <a asp-controller="EndOfTreatment" asp-action="Index" class="waves-effect"><i class="fa fa-hourglass-half" aria-hidden="true"></i>لیست پایان درخواست ها</a>
            </li>
            <li>
                <a asp-controller="Prescription" asp-action="Index" class="waves-effect"><i class="fa fa-heartbeat" aria-hidden="true"></i>نسخه ها</a>
            </li>
            <li>
                <a asp-controller="SupportUserOrder" asp-action="Index" class="waves-effect"><i class="fa fa-first-order" aria-hidden="true"></i>سفارشات پشتیبان ها</a>
            </li>
            <li>
                <a asp-controller="ImportFile" asp-action="ImportDevice" class="waves-effect"><i class="fa fa-file-excel-o" aria-hidden="true"></i>ایمپورت اکسل دستگاه ها</a>
            </li>
            <li id="treeviewInfo" class="treeview" style="cursor:pointer;">
                <a>
                    <i class="fa fa-info" aria-hidden="true"></i> <span>اطلاعات پایه</span>
                    <span class="pull-right-container">

                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="waves-effect"><a asp-controller="DeviceStatus" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> وضعیت دستگاه</a></li>
                    <li class="waves-effect"><a asp-controller="EndOfTreatmentStatus" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> وضعیت درخواست های پایان درمان</a></li>
                    <li class="waves-effect"><a asp-controller="Gender" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> جنسیت</a></li>
                    <li class="waves-effect"><a asp-controller="DeviceType" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> نوع دستگاه</a></li>
                    <li class="waves-effect"><a asp-controller="DeviceTypeInformation" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> اطلاعات پایه نسخه</a></li>
                    <li class="waves-effect"><a asp-controller="PrescriptionStatus" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> وضعیت نسخه</a></li>
                    <li class="waves-effect"><a asp-controller="SettelmentStatus" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> وضعیت تسویه</a></li>
                    <li class="waves-effect"><a asp-controller="FileUploadType" asp-action="Index" class="waves-effect"><i class="fa fa-circle-o" aria-hidden="true"></i> نوع آپلود فایل</a></li>
                </ul>
            </li>

        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
<script>
    $("#treeviewInfo").click(function () {
        if ($(this).hasClass('active')) {
            $(this).removeClass('active');
        } else {
            $(this).addClass('active');
        }
    })
</script>